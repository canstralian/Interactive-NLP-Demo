
[MASTER]
ignore=CVS
ignore-patterns=
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    too-many-arguments,
    too-many-instance-attributes,
    line-too-long,  # handled by black
    no-member,  # often false positives
    fixme,

[FORMAT]
max-line-length=88
expected-line-ending-format=LF

[BASIC]
good-names=i,j,k,ex,_,df,nlp,st,px

[DESIGN]
max-args=8
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-attributes=12
min-public-methods=1
